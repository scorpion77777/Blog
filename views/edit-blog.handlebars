

 <!-- Tailwind form -->


<section class="pt-20 p-10 lg:pt-[40px] pb-12 lg:pb-[90px] mt-[50px] bg-gradient-to-br from-pink-600 to-orange-600 ">
   <div class="container">
      <div class="flex flex-wrap -mx-4">
         <div class="w-full px-4">
            <div class="text-center mx-auto mb-12 lg:mb-20 max-w-[410px]">
               <span class="font-semibold text-lg text-primary mb-2 block" for="blog-title">
               Edit blog post
               </span>
               
               
              
  <form class="form new-blog-form">
    <div class="mb-4 mt-4">
      <label class="block text-white text-sm font-bold mb-2" for="blog-title">
         Blog Title
      </label>
      <input
        class="form-control shadow appearance-none border border-black rounded w-full py-2 px-3 text-white bg-black leading-tight focus:outline-none focus:shadow-outline"
        id="new-blog-title"
        type="text"
        placeholder="New title"
      />
    </div>
    <div class="mb-6">
      <label
        class="block text-white text-sm font-bold mb-2"
        for="blog-content"
      >
        Blog content
      </label>
      <input
        class="form-control shadow appearance-none border border-black rounded w-full py-2 px-3 text-white bg-black mb-3 leading-tight focus:outline-none focus:shadow-outline"
        id="blog-content"
        type="text"
        placeholder="New content"
      />

    </div>

    <div class="inline-flex items-center space-between">
      <button
        value="{{blog.id}}"
        type="submit"
        class="submit-blog-btn group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >
        Update post
      </button>
    </div>


<div class="inline-flex items-center">
      <button
        value="{{blog.id}}"
        type="submit"
        class="delete-blog-btn group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >   
        Delete post
      </button>
    </div>
  </form>

<script src="/js/edit-blog.js"></script>
<script src="/js/delete-blog.js"></script>