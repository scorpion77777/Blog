{{!-- display blog post info --}}
{{> blog-card blog}}
{{!-- display comment form and already posted comments ONLY if logged in --}}
{{#if logged_in}}
<div class="card inline-flex mt-5 p-4">
        <form class="form comment-form">
            <div class="mb-4">
            <span class=" text-md text-blue-700 dark:text-gray-400">Add comment</span>
            </div>
            <div class="form-group">
               <input class="form-control w-full flex shadow appearance-none border-none rounded py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="comment-content" />
            </div>
            <div class="form-group">
                <div class="flex items-center justify-between">
      <button
        type="submit"
        class="group relative flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >Add comment</button>
                </div>
           
        </form>
    </div>
</div>
{{/if}}
{{!-- display already posted comments --}}
{{> comments blog}}

</div>

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}